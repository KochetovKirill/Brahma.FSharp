{
open TTA.ASM
}

tokens {
    _ of string
}

options {
    translate = true
    module = "Parser.Parser"
    infEpsPath = epsilons
    pos = uint64
}

module Main

[<Start>]
program: (line SEMI)+
 
line: (expr)*
 
expr:
    SET LBRACE c=coord n=NUMBER RBRACE {Set (c, int n)}
    | MVC LBRACE c=coord n=NUMBER RBRACE {Mvc (c, int n)}
    | MOV LBRACE fc=coord sc=coord RBRACE {Mov (fc, sc)}
    | EPS {Eps}
 
coord: fst=NUMBER snd=NUMBER {(int fst) * 1<ln>, (int snd) * 1<col>}

